<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:p="http://www.springframework.org/schema/p"
    xmlns:c="http://www.springframework.org/schema/c"
    xsi:schemaLocation="
        http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd" >

    <bean id="authenticationManager" class="org.jasig.cas.authentication.PolicyBasedAuthenticationManager">
        <constructor-arg>
            <map>
                <entry key-ref="proxyAuthenticationHandler" value-ref="proxyPrincipalResolver" />
                <entry key-ref="oAuthAuthenticationHandler" value="#{null}" />
                <entry key-ref="pac4jClientAuthenticationHandler" value="#{null}" />
                <entry key-ref="openScienceFrameworkAuthenticationHandler" value="#{null}" />
            </map>
        </constructor-arg>
        <property name="authenticationMetaDataPopulators">
            <list>
                <bean class="org.jasig.cas.authentication.SuccessfulHandlerMetaDataPopulator" />
                <bean class="org.jasig.cas.authentication.principal.RememberMeAuthenticationMetaDataPopulator" />
                <bean class="org.jasig.cas.support.oauth.authentication.principal.OAuthAuthenticationMetaDataPopulator" />
                <bean class="org.jasig.cas.support.pac4j.authentication.ClientAuthenticationMetaDataPopulator" />
                <bean class="io.cos.cas.authentication.principal.OpenScienceFrameworkAuthenticationMetaDataPopulator" />
            </list>
        </property>
        <property name="authenticationPolicy">
            <bean class="org.jasig.cas.authentication.AnyAuthenticationPolicy" />
        </property>
    </bean>

    <!-- OSF Authentication: Use Postgres Adaptors -->
    <!--
        <bean id="openScienceFrameworkAuthenticationHandler" class="io.cos.cas.adaptors.postgres.handlers.OpenScienceFrameworkAuthenticationHandler"
            p:openScienceFrameworkDao-ref="openScienceFrameworkDao"
        />
     -->

    <!-- OSF Authentication: Use OSF API Adaptors -->
    <bean id="openScienceFrameworkAuthenticationHandler" class="io.cos.cas.authentication.handler.OpenScienceFrameworkAuthenticationHandler"
          p:apiEndpointHandler-ref="apiEndpointHandler" />
    <bean id="apiEndpointHandler" class="io.cos.cas.api.handler.ApiEndpointHandler"
          c:casLoginUrl="${cas.osf.login.absolute.url}"
          c:casCreateOrLinkOsfAccountUrl="${cas.osf.createOrLinkOsfAccount.absolute.url}"
          c:apiCasEndpointUrl="${osf.api.cas.endpoint.url}"
          c:apiCasEndpointJweSecret="${osf.api.cas.endpoint.jweSecret}"
          c:apiCasEndpointJwtSecret="${osf.api.cas.endpoint.jwtSecret}" />


    <!-- OAuth Authorization -->
    <bean id="oAuthAuthenticationHandler"
        class="org.jasig.cas.support.oauth.authentication.handler.support.OAuthCredentialsAuthenticationHandler" />

    <!-- Required for proxy ticket mechanism. -->
    <bean id="proxyAuthenticationHandler" class="org.jasig.cas.authentication.handler.support.HttpBasedServiceCredentialsAuthenticationHandler"
        p:httpClient-ref="noRedirectHttpClient"
        p:requireSecure="${proxyAuth.requireSecure:true}" />

    <bean id="proxyPrincipalResolver" class="org.jasig.cas.authentication.principal.BasicPrincipalResolver" />

    <!-- Authentication Delegation -->
    <bean id="pac4jClientAuthenticationHandler" class="org.jasig.cas.support.pac4j.authentication.handler.support.ClientAuthenticationHandler"
        c:theClients-ref="clients" />
</beans>
